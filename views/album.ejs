<link rel="stylesheet" type="text/css" href="./photoSwipe/photoswipe.css">
<link rel="stylesheet" type="text/css" href="./photoSwipe/default-skin/default-skin.css">
<script src="./photoSwipe/photoswipe-ui-default.min.js"></script>
<script src="./photoSwipe/photoswipe.min.js"></script>
<script src="./main.js"></script>
<script src="./lazyload.min.js"></script>
<script type="text/javascript">
  var lazy = lazyload({
    container: document.getElementsByTagName('body')[0]
  });
</script>
<% if (!isRoot){ %>
  <nav class="breadcrumb">
  <% for (var i=0; i<breadcrumb.length; i++) { %>
  <% if (i==breadcrumb.length-1){ %>
  <%= breadcrumb[i].name %>
  <% }else{ %>
  <a href="./<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
  <% } %>
  <% } %>
  </nav>
<% } %>

<h1 class="album-title"><%= name %></h1>

<% if (albums.length>0){ %>
  <h2><%= albums.length %>个相册</h2>
  <div class="albums">
    <% albums.forEach(function(album){ %>
      <figure class="thumb" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
          <% if(album.password) {%>
          <a class="js-secret-album img-wrap" data-href="./<%= album.url %>">
            <div class="bg-lock">
              <i class="icon-lock"></i>
            </div>
          <% } else { %>
          <a href="./<%= album.url %>" class="img-wrap">
          <% } %>
            <img alt="<%= album.name %>" data-src="./<%= album.url %>?tn=1" src="./img/preloader.gif" onload="lazy(this)" itemprop="thumbnail"/>
          </a>
          <figcaption itemprop="caption description"><%= album.name %></figcaption>
      </figure>
    <% }) %>
  </div>
  <div tabindex="-1" class="overlay js-overlay"></div>
  <div class="dialog js-dialog">
    <input class="input-lock" type="text" placeholder="password needed" />
    <a href="javascript:void(0);" title="确定" class="js-modal-yes btn-default"><i class="icon-unlocked"></i>确定</a>
  </div>
<% } %>

<% if (photos.length > 0){ %>
<h2><%= description %></h2>
<div class="photos" itemscope itemtype="http://schema.org/ImageGallery">
  <% photos.forEach(function(photo){ %>
      <figure class="thumb" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
          <a class="img-wrap" href="./<%= photo.src %>" itemprop="contentUrl" data-size="<%= photo.size %>">
            <img alt="<%= photo.name %>" data-src="./<%= photo.src %>?tn=1" src="./img/preloader.gif" onload="lazy(this)" itemprop="thumbnail"/>
          </a>
          <figcaption itemprop="caption description"><%= photo.name %></figcaption>
          <div style="display:none">
            <% if (photo.exif) {%>
            <p class="exif-p"><b>相机：</b><span><%= photo.exif.Model %></span></p>
            <p class="exif-p"><b>时间：</b><span><%= photo.exif.Time %></span></p>
            <p class="exif-p"><b>光圈：</b><span>F<%= photo.exif.FNumber %></span></p>
            <p class="exif-p"><b>焦距：</b><span><%= photo.exif.focalLength %></span></p>
            <p class="exif-p"><b>ISO：</b><span><%= photo.exif.ISO %></span></p>
            <p class="exif-p"><b>快门：</b><span><%= photo.exif.speed %></span></p>
            <% } %>
          </div>
      </figure>
  <% }) %>
  <% for (var i=0; i < 10; i++) {%>
    <figure class="hide"></figure>
  <% } %>
</div>
<% } %>

<!-- Root element of PhotoSwipe. Must have class pswp. -->
<div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">

    <!-- Background of PhotoSwipe. 
         It's a separate element as animating opacity is faster than rgba(). -->
    <div class="pswp__bg"></div>

    <!-- Slides wrapper with overflow:hidden. -->
    <div class="pswp__scroll-wrap">

        <!-- Container that holds slides. 
            PhotoSwipe keeps only 3 of them in the DOM to save memory.
            Don't modify these 3 pswp__item elements, data is added later on. -->
        <div class="pswp__container">
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
        </div>

        <!-- Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed. -->
        <div class="pswp__ui pswp__ui--hidden">

            <div class="pswp__top-bar">

                <!--  Controls are self-explanatory. Order can be changed. -->

                <div class="pswp__counter"></div>

                <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>

                <!--<button class="pswp__button pswp__button--share" title="Share"></button>-->

                <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>

                <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>

                <!-- Preloader demo http://codepen.io/dimsemenov/pen/yyBWoR -->
                <!-- element will get class pswp__preloader--active when preloader is running -->
                <div class="pswp__preloader">
                    <div class="pswp__preloader__icn">
                      <div class="pswp__preloader__cut">
                        <div class="pswp__preloader__donut"></div>
                      </div>
                    </div>
                </div>
            </div>

            <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                <div class="pswp__share-tooltip"></div> 
            </div>

            <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
            </button>

            <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
            </button>

            <div class="pswp__caption">
                <div class="pswp__caption__center"></div>
            </div>

        </div>

    </div>

</div>